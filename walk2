  <div id="result" class="result" aria-live="polite">
    <div class="scoreline">
      <h3 id="scoreText">Your Privilege Score: 0</h3>
      <div class="label" id="levelText">0% — Low</div>
    </div>
    <div class="bar" role="img" aria-label="Privilege bar">
      <div class="fill" id="barFill"></div>
