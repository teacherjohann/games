<script>
  // Map: true means "Yes" is privileged (+1). false means "Yes" is disadvantage (−1).
  const mapping = {
    q1:false, q2:false, q3:true, q4:false, q5:false, q6:false,
    q7:false, q8:false, q9:true, q10:true, q11:true, q12:false,
    q13:false, q14:true, q15:true, q16:true, q17:false, q18:false,
    q19:true, q20:false, q21:false
  };

  function classify(percent){
    if (percent <= 33) return {cls:'low',   label:'Low'};
    if (percent <= 66) return {cls:'mid',   label:'Medium'};
    return {cls:'high', label:'High'};
  }

  function calculateScore(){
    let total=0;
    const keys=Object.keys(mapping);
    for(const k of keys){
      const sel=document.querySelector(`input[name="${k}"]:checked`);
      const val = sel ? sel.value : 'no';
      total += (val === 'yes') ? (mapping[k] ? 1 : -1) : (mapping[k] ? -1 : 1);
    }
    const max = keys.length;
    const percent = Math.round(((total + max) / (2 * max)) * 100);

    const scoreText = document.getElementById("scoreText");
    const levelText = document.getElementById("levelText");
    const barFill = document.getElementById("barFill");
    const result = document.getElementById("result");

    scoreText.textContent = `Your Privilege Score: ${total} (Range -${max} to +${max})`;
    const klass = classify(percent);
    levelText.textContent = `${percent}% — ${klass.label}`;

    barFill.style.width = percent + "%";
    barFill.classList.remove('low','mid','high');
    barFill.classList.add(klass.cls);

    result.style.display = "block";
  }

  function resetForm(){
    document.getElementById("quizForm").reset();
    const barFill = document.getElementById("barFill");
    barFill.style.width = "0%";
    barFill.classList.remove('low','mid','high');
    document.getElementById("result").style.display = "none";
  }
</script>
